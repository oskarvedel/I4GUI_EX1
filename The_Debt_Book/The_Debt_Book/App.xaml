<Application x:Class="The_Debt_Book.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:The_Debt_Book"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <DataTemplate x:Key="DebtorTemplate">
            <WrapPanel>
                <TextBlock Text="{Binding Path=Debtorname}" Padding="5,0" Width="140" />
                <TextBlock Text="{Binding Path=initialDebt}" Padding="5,0" Width="140"/>

            </WrapPanel>
        </DataTemplate>
         
    </Application.Resources>
</Application>
