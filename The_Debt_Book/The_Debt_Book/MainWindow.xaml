<Window x:Class="The_Debt_Book.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:The_Debt_Book"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <local:MainWindowViewModel/>
    </Window.DataContext>
    <Grid Background="Fuchsia">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <Label Grid.Column="0" Grid.Row="0" Content="DEBTORS" FontSize="16" FontWeight="Bold" Foreground="Chartreuse"/>
        <ListBox Grid.Column="0" Grid.Row="1" Margin="0,10,0,0" Background="Chartreuse"
            Name="deptorList"
            Foreground="Fuchsia"
            ItemsSource="{Binding Path=debtorsList}"
            SelectedItem="{Binding Path=currentDebtor}"


        />


        <Button Grid.Column="1" Grid.Row="1" Content="Add" Background="Chartreuse" Margin="10,10,0,0" 
                Height="25" Width="40" 
                Foreground="Fuchsia"/>

        
        
    </Grid>
</Window>

